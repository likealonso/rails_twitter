<h1>Welcome to Twitter</h1>

<ul>
    <% @tweets.each do |tweet| %>
        <li>
            <%= link_to tweet.handle, tweet_path(tweet) %> &nbsp-&nbsp <%= tweet.content %> &nbsp-&nbsp 
            <%= link_to "Edit", edit_tweet_path(tweet) %> &nbsp-&nbsp 
            <%= link_to "Delete", tweet_path(tweet), method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"} %>

            <% end %>
        </li>

</ul>